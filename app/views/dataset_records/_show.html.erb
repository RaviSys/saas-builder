<div class="modal-dialog modal-lg" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel"><%= @dataset.name %></h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div>
      <% @dataset_record.field_values.each do |field| %>
        <ul class="list-group list-group-horizontal text-center">
          <li class="list-group-item border-0"><b><%= field.field.name %>:</b></li>
          <li class="list-group-item border-0"><%= field.value %></li>
        </ul>
      <% end %>
    </div>
  </div>
</div>
