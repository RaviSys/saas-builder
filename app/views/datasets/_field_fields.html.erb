<div class="nested-fields">
	<div class="form-group">
		<small>
			<label>Field Name</label>
		</small>
		<%= f.text_field :name, class: "form-control" %>
	</div>
	<div class="form-group">
		<small>
			<label for="exampleFormControlSelect1">Field Type</label>
		</small>	
	  <%= f.select :field_type, options_for_select(Field::FIELD_TYPE, selected: f.object.field_type), { prompt: "Select Field Type" }, { class: "form-control",required: true} %>
	</div>
	<div class="form-group">
		<%= f.check_box :is_required %>
		<small>
			<label>Is Required</label>
		</small>	
	</div>
	<div class="form-group">
		<small>
			<label for="exampleFormControlSelect1">Field Position</label>
		</small>	
		<%= f.text_field :position, class: "form-control" %>
	</div>
	<div class="form-group text-right">
		<%= link_to_remove_association "Remove Field", f, class: "btn btn-danger btn-sm" %>
	</div>
</div>	
